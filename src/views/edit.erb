<form action="/memos/<%= params[:id] %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" id="title" name="title" value="<%= @memo["title"] %>"><br>
  <textarea id="content" name="content"><%= @memo["content"] %></textarea><br>
  <button type="submit">保存</button>
</form>
